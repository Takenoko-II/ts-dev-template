{
    "compilerOptions": {
        "allowJs": false,
        "checkJs": false,
        "module": "esnext",
        "target": "esnext",
        "moduleResolution": "bundler",
        "esModuleInterop": true,
        "declaration": true,
        "skipLibCheck": true,

        "strict": true,
        "noImplicitOverride": true,
        "exactOptionalPropertyTypes": true,
        "allowUnusedLabels": false,
        "allowUnreachableCode": false,
        "noImplicitReturns": true,
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "noUncheckedIndexedAccess": true,
        "noFallthroughCasesInSwitch": false,
        "noPropertyAccessFromIndexSignature": false, // これやるとRecordがReflect.get()でしか使えなくなる件

        "baseUrl": ".",
        "paths": {
            "@/*": [
                "./src/*"
            ],
            "@typesentry": [
                "./src/libs/TypeSentry.ts"
            ],
            "@utils/*": [
                "./src/utils/*"
            ]
        }
    },
    "include": [
        "src"
    ],
    "exclude": [
        "src/utils",
        "src/libs"
    ]
}
